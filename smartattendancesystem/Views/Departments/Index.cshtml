@model IEnumerable<smartattendancesystem.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>All Department Lists</h2>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table id="table" class="table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OutTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
          
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyNavigation.CompanyId)
                </td>
                <td>
                    <button>  <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn-circle">Edit</a> </button> |
                    <button><a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn-circle">Details</a></button> |
                    <button> <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn-circle">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>







@section Scripts{

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "scrollY": 200,
                "scrollX": true
            });
        });


    </script>
}